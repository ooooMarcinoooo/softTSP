<Window x:Class="TravelPathOptimization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:custom="clr-namespace:TravelPathOptimization"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="MainWindow" Height="600" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />

            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <custom:CustomGraph Grid.Row="1" Margin="10,26,10,10" Width="377" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <custom:D3Graph x:Name="chart" Grid.Row="0" Grid.Column="1"/>
        <Label Content="[Pole1: Wartosc oceny]" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Label Content="[Pole2: 4 wykresy]" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1"/>
        <Label Content="[Pole3: Minimalne wartosci funkcji]" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="1"/>
        <Label Content="[Pole4: Dialog i diagnostyka]" Margin="32,0" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
